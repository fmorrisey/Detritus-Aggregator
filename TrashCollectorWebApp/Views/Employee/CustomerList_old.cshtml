@model IEnumerable<TrashCollectorWebApp.Models.Customer>

@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CustomerList</h1>

<p>
    <a asp-action="Create"></a>
</p>
<table class="table">
    <thead>
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_PickUp_Reccuring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_PickUp_OneTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_PickUp_Temp_Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer_PickUp_Temp_End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            
            <td>
                <a asp-controller="Customer" asp-action="Details" 
                   asp-route-id="@item.Customer_ID">
                @Html.DisplayFor(modelItem => item.FullName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line_1)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_PickUp_Reccuring)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.OneTimePickUp, 
               new { @disabled = "disabled" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_PickUp_Temp_Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer_PickUp_Temp_End)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                <a class="btn btn-outline-secondary" asp-action="ConfirmPickUp" 
                   asp-route-id="@item.Customer_ID">Confirm PickUp</a>
            </td>
        </tr>
}
    </tbody>
</table>
