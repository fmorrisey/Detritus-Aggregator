@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "CreateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>Create your customer file</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdentityUserId" class="control-label">Don't Touch</label>
                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <span asp-validation-for="IdentityUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" required />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" required/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Line_1" class="control-label"></label>
                <input asp-for="Line_1" class="form-control" required />
                <span asp-validation-for="Line_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" required/>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" required />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip" class="form-control" required />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_PickUp_Reccuring" class="control-label"></label>
                <input asp-for="Customer_PickUp_Reccuring" class="form-control" required/>
                <span asp-validation-for="Customer_PickUp_Reccuring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign-Up" class="btn btn-primary" />
                <p>There is a one-time charge of $12 for sign-up.</p>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
