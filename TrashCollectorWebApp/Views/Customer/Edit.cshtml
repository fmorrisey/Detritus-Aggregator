@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="~/js/autocomplete.js"></script>

}

<h3>Update Information</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input type="hidden" asp-for="Customer_ID" />
                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <input type="hidden" asp-for="FirstName" class="form-control" />
                <input type="hidden" asp-for="LastName" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Reccuring" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_Start" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_End" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_OneTime" class="form-control" />
                <input type="hidden" asp-for="Latitude" class="form-control" />
                <input type="hidden" asp-for="Longitude" class="form-control" />
                <input type="hidden" asp-for="Balance" class="form-control" />
                <input type="hidden" asp-for="IsEnrolled" class="form-control" />
                <input type="hidden" asp-for="ConfirmPickUp" class="form-control" />
                <input type="hidden" asp-for="OneTimePickUp" class="form-control" />

            </div>
            <div id="locationField">
                <input id="autocomplete"
                       placeholder="Enter your address"
                       onFocus="geolocate()"
                       type="text" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">@Html.DisplayFor(c => c.FullName)</label>
            </div>

            <div class="form-group">
                <label asp-for="Line_1" class="control-label"></label>
                <input asp-for="Line_1"
                       id="route"
                       type="text"
                       class="form-control" required />
                <span asp-validation-for="Line_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City"
                       id="locality"
                       type="text"
                       class="form-control" required />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State"
                       id="administrative_area_level_1"
                       type="text"
                       class="form-control" required />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zip" class="control-label"></label>
                <input asp-for="Zip"
                       id="postal_code"
                       type="number"
                       class="field form-control" required />
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");

        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=@ViewData["APIkey"]&callback=initAutocomplete&libraries=places&v=weekly"
                defer></script>

    }}
