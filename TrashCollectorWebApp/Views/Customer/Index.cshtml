@model IEnumerable<TrashCollectorWebApp.Models.Customer>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Home</h1>

<p>
    <a asp-action="CreateProfile">Create Profile</a> |
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                <a asp-action="Details" asp-route-id="@item.Customer_ID">@Html.DisplayFor(modelItem => item.FullName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Customer_ID">Update address</a> |
                <a asp-action="ChangePickUp" asp-route-id="@item.Customer_ID">Change Pick Up</a> |
                <a asp-action="Suspend" asp-route-id="@item.Customer_ID">Suspend Pick Up</a> |
            </td>
            <td>
                
            </td>

        </tr>
}
    </tbody>
</table>
