@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "Suspend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Suspend</h3>
<p>Going away? Temporarily suspend service</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Suspend">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input type="hidden" asp-for="Customer_ID" />
                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <input type="hidden" asp-for="FirstName" class="form-control" />
                <input type="hidden" asp-for="LastName" class="form-control" />
                <input type="hidden" asp-for="Line_1" class="form-control" />
                <input type="hidden" asp-for="City" class="form-control" />
                <input type="hidden" asp-for="State" class="form-control" />
                <input type="hidden" asp-for="Zip" class="form-control" />

                <input type="hidden" asp-for="Customer_PickUp_Reccuring" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_OneTime" class="form-control" />
                <input type="hidden" asp-for="ConfirmPickUp" class="form-control" />
                <input type="hidden" asp-for="IsEnrolled" class="form-control" />
                <input type="hidden" asp-for="OneTimePickUp" class="form-control" />

                <input type="hidden" asp-for="Balance" class="form-control" />

            </div>
            
            <div class="">
                <h5>Location: </h5>
                @Html.DisplayFor(c => c.Line_1)
                @Html.DisplayFor(c => c.City), @Html.DisplayFor(c => c.Zip);
                

            </div>
            
            <div class="form-group">
                <h5>Choose start and end dates:</h5>
                <label asp-for="Customer_PickUp_Temp_Start" class="control-label"></label>
                <input asp-for="Customer_PickUp_Temp_Start" class="form-control" type="date" />
                <span asp-validation-for="Customer_PickUp_Temp_Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer_PickUp_Temp_End" class="control-label"></label>
                <input asp-for="Customer_PickUp_Temp_End" class="form-control" type="date" />
                <span asp-validation-for="Customer_PickUp_Temp_End" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Suspend" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
