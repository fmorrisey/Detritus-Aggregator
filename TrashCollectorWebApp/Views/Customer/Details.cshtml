@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Profile</h1>
<h5>Welcome @Html.DisplayFor(m => m.FullName)!</h5>

<div class="col-md-6">
    <hr />
</div>
<div class="row">
    <div class="col-md-6">
        <div class="row">
            <!--CUSTOMER-->
            <div class="col-sm-12">
                <h5><u>Customer Info:</u></h5>
            </div>
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.FirstName)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.FirstName)
            </div>
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.LastName)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.LastName)
            </div>
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.Line_1)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Line_1)
            </div>
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.City), @Html.DisplayNameFor(model => model.State)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State)
            </div>
            <div class="col-sm-3">
                @Html.DisplayNameFor(model => model.Zip)
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Zip)
            </div>
            <!--SERIVICE-->
            <div class="col-sm-12">
                <hr />
                <h5><u>Service Info:</u></h5>
            </div>
            <div class="col-sm-3">
                Weekday
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Customer_PickUp_Reccuring)
            </div>
            <div class="col-sm-3">
                One-Time:
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Customer_PickUp_OneTime) &nbsp;&nbsp;
                @Html.CheckBoxFor(model => model.OneTimePickUp, new { @disabled = "disabled" })
            </div>
            <div class="col-sm-12">
                <u>Suspension:</u>
            </div>
            <div class="col-sm-3">
                Start:
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Customer_PickUp_Temp_Start)
            </div>
            <div class="col-sm-3">
                End:
            </div>
            <div class="col-sm-9">
                @Html.DisplayFor(model => model.Customer_PickUp_Temp_End)

            </div>
            <!--Accounts-->
            <div class="col-sm-12">
                <u>Account:</u>
            </div>
            <div class="col-sm-3">
                Balance Due:
            </div>
            <div class="col-sm-9">
                <a asp-controller="Customer" asp-action="AccountView">
                    @Html.DisplayFor(model => model.Balance)
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <h1>BIG OLD TESTING TEXT</h1>
    </div>
</div>
<div>
    <a asp-action="Edit" >Edit</a> |
    <a asp-action="Index">Back</a>
</div>
