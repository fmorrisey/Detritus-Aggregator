@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "OneTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>One Time</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OneTime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input type="hidden" asp-for="Customer_ID" />
                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <input type="hidden" asp-for="FirstName" class="form-control" />
                <input type="hidden" asp-for="LastName" class="form-control" />
                <input type="hidden" asp-for="Line_1" class="form-control" />
                <input type="hidden" asp-for="City" class="form-control" />
                <input type="hidden" asp-for="State" class="form-control" />
                <input type="hidden" asp-for="Zip" class="form-control" />

                <input type="hidden" asp-for="Customer_PickUp_Reccuring" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_Start" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_End" class="form-control" />


                <input type="hidden" asp-for="Balance" class="form-control" />

                <span asp-validation-for="Customer_ID" class="text-danger"></span>
                <span asp-validation-for="IdentityUserId" class="text-danger"></span>
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <span asp-validation-for="LastName" class="text-danger"></span>
                <span asp-validation-for="Line_1" class="text-danger"></span>
                <span asp-validation-for="City" class="text-danger"></span>
                <span asp-validation-for="State" class="text-danger"></span>
                <span asp-validation-for="Zip" class="text-danger"></span>

                <span asp-validation-for="Customer_PickUp_Temp_Start" class="text-danger"></span>
                <span asp-validation-for="Customer_PickUp_Temp_End" class="text-danger"></span>
                <span asp-validation-for="Customer_PickUp_Reccuring" class="text-danger"></span>
                

                <span asp-validation-for="Balance" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">@Html.DisplayFor(c => c.FullName)</label>
            </div>

            <div class="">
                <h5>Location: </h5>
                @Html.DisplayFor(c => c.Line_1)
                @Html.DisplayFor(c => c.City), @Html.DisplayFor(c => c.Zip);
                

            </div>
                        
            <div class="form-group">
                <label asp-for="Customer_PickUp_OneTime" class="control-label"></label>
                <input asp-for="Customer_PickUp_OneTime" class="form-control" type="date" />
                <span asp-validation-for="Customer_PickUp_OneTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
