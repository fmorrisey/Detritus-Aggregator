@model TrashCollectorWebApp.Models.Customer

@{
    ViewData["Title"] = "OneTime";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>One Time</h3>
<p>Schedule a one-time pick up</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OneTime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <input type="hidden" asp-for="Customer_ID" />
                <input type="hidden" asp-for="IdentityUserId" class="form-control" />
                <input type="hidden" asp-for="FirstName" class="form-control" />
                <input type="hidden" asp-for="LastName" class="form-control" />
                <input type="hidden" asp-for="Line_1" class="form-control" />
                <input type="hidden" asp-for="City" class="form-control" />
                <input type="hidden" asp-for="State" class="form-control" />
                <input type="hidden" asp-for="Zip" class="form-control" />
                <input type="hidden" asp-for="Latitude" class="form-control" />
                <input type="hidden" asp-for="Longitude" class="form-control" />

                <input type="hidden" asp-for="Customer_PickUp_Reccuring" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_Start" class="form-control" />
                <input type="hidden" asp-for="Customer_PickUp_Temp_End" class="form-control" />
                <input type="hidden" asp-for="ConfirmPickUp" class="form-control" />
                <input type="hidden" asp-for="IsEnrolled" class="form-control" />
                <input type="hidden" asp-for="OneTimePickUp" class="form-control" />

                <input type="hidden" asp-for="Balance" class="form-control" />

            </div>

                 
            <div class="form-group">
                <h5>Choose Date: </h5>
                <label asp-for="Customer_PickUp_OneTime" class="control-label"></label>
                <input asp-for="Customer_PickUp_OneTime" class="form-control" type="date" required/>
                <span asp-validation-for="Customer_PickUp_OneTime" class="text-danger"></span>

            </div>
            
            <div class="form-group">
                <p>Additional charge of: $10 </p>
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="Details" value="Cancel" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
